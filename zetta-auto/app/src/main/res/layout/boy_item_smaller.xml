<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/boy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boy Name"
            android:textAlignment="center"
            android:textColor="@color/vendorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/boyProfile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_delivery_boy_profile"
            android:layout_below="@+id/boy_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/boy_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boyProfile"
            android:text="Phone"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:textSize="16dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>